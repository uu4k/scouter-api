{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "test": "jest",
    "serve": "npm run build && firebase serve --only functions",
    "serve:firestore": "firebase serve --only firestore",
